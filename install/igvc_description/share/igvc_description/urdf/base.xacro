<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

<xacro:macro name="base">

<link name="base_link">

  <visual>
    <geometry>
      <box size="0.5 0.4 0.2"/>
    </geometry>
    <origin xyz="0 0 0.15"/>
    <material name="body_color">
      <color rgba="0.15 0.15 0.18 1"/>
    </material>
  </visual>

  <collision>
    <geometry>
      <box size="0.5 0.4 0.2"/>
    </geometry>
    <origin xyz="0 0 0.15"/>
  </collision>

  <inertial>
    <mass value="10.0"/>
    <origin xyz="0 0 0.15"/>
    <inertia ixx="0.2" iyy="0.2" izz="0.2"
             ixy="0" ixz="0" iyz="0"/>
  </inertial>

</link>

<!-- Correct gazebo tag placement -->
<gazebo reference="base_link">
  <self_collide>false</self_collide>
</gazebo>

</xacro:macro>

</robot>
