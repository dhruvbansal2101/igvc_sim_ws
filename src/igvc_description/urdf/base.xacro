<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

<xacro:macro name="base">

  <!-- Ground reference -->
  <link name="base_link"/>

  <!-- Chassis -->
  <link name="chassis_link">
    <visual>
      <geometry>
        <box size="0.5 0.4 0.2"/>
      </geometry>
      <material name="body_color">
        <color rgba="0.15 0.15 0.18 1"/>
      </material>
    </visual>

    <collision>
      <geometry>
        <box size="0.5 0.4 0.2"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="10.0"/>
      <inertia ixx="0.2" iyy="0.2" izz="0.2"
               ixy="0.0" ixz="0.0" iyz="0.0"/>
    </inertial>
  </link>

  <!-- Lift chassis above ground -->
  <joint name="base_to_chassis" type="fixed">
    <parent link="base_link"/>
    <child link="chassis_link"/>
    <origin xyz="0 0 0.15"/>
  </joint>

</xacro:macro>

</robot>
