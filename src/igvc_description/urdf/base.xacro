<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

<xacro:macro name="base">

  <!-- BASE LINK (GROUND REFERENCE) -->
  <link name="base_link">
    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="0.1"/>
      <inertia ixx="0.0001" iyy="0.0001" izz="0.0001"
               ixy="0.0" ixz="0.0" iyz="0.0"/>
    </inertial>
  </link>

  <!-- CHASSIS -->
  <link name="chassis_link">
    <visual>
      <origin xyz="0 0 0.15"/>
      <geometry>
        <box size="0.5 0.4 0.2"/>
      </geometry>
      <material name="body_color">
        <color rgba="0.15 0.15 0.18 1"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 0.15"/>
      <geometry>
        <box size="0.5 0.4 0.2"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0.15"/>
      <mass value="10.0"/>
      <inertia ixx="0.2" iyy="0.2" izz="0.2"
               ixy="0.0" ixz="0.0" iyz="0.0"/>
    </inertial>
  </link>

  <joint name="base_to_chassis" type="fixed">
    <parent link="base_link"/>
    <child link="chassis_link"/>
    <origin xyz="0 0 0"/>
  </joint>

</xacro:macro>

</robot>
